<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:padding="8dp"
    android:textDirection="rtl"
    tools:context="com.example.zgbeautyandhair.CreditCardFragment.CreditSecureCodeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"
            android:text="הזיני את הנתונים:"
            android:textColor="@android:color/black"
            android:fontFamily="@font/rubik"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"
            android:text="@string/card_cvv"
            android:fontFamily="@font/rubik"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.example.zgbeautyandhair.Utils.CreditCardEditText
            android:id="@+id/et_cvv"
            android:textDirection="ltr"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="left"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/rubik"
            android:layoutDirection="rtl"
            android:background="@drawable/custom_input"
            android:hint="ספרות ביקורת"
            android:inputType="number"
            android:maxLength="3"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="12dp"
            android:privateImeOptions="nm" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
