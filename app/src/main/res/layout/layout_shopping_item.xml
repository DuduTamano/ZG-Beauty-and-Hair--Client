<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_shopping"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    android:padding="8dp"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_shopping_item"
            app:srcCompat="@drawable/ic_image_black_24dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/txt_name_shopping_item"
            android:text="Hair Style Wax"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/bellerose"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_below="@id/img_shopping_item"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_price_shopping_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 â‚ª"
            android:gravity="center_horizontal"
            android:layout_below="@id/txt_name_shopping_item"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/rubik_bold"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>